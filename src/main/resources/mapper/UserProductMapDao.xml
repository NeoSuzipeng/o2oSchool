<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.o2o.dao.UserProductMapDao">
    <resultMap type="com.imooc.o2o.entity.UserProductMap" id="userProductMap">
        <id column="user_product_id" property="userProductId" />
		<result column="create_time" property="createTime" />
		<result column="point" property="point" />
		<association property="user" column="user_id" javaType="com.imooc.o2o.entity.PersonInfo">
		    <id column="user_id" property="userId" />
			<result column="name" property="name" />
		</association>
		<association property="shop" column="shop_id" javaType="com.imooc.o2o.entity.Shop">
		    <id column="shop_id" property="shopId" />
			<result column="shop_name" property="shopName" />
		</association>
		<association property="product" column="product_id" javaType="com.imooc.o2o.entity.Product">
		    <id column="product_id" property="productId" />
			<result column="product_name" property="productName" />
		</association>
		<association property="operator" column="operator_id" javaType="com.imooc.o2o.entity.PersonInfo">
			<id column="operator_id" property="userId" />
			<result column="operator_name" property="name" />
		</association>
    </resultMap>
    
    <select id="selectUserProductMapByCondition" resultMap="userProductMap">
        SELECT
		upm.user_product_id,
		upm.create_time,
		upm.point,
		buyer.user_id,
		buyer.name,
		s.shop_id,
		s.shop_name,
		p.product_id,
		p.product_name,
		operator.user_id AS operator_id,
		operator.name AS operator_name
		FROM
		tb_user_product_map
		upm,
		tb_person_info buyer,
		tb_shop s,
		tb_product p,
		tb_person_info
		operator
		<where>
			upm.user_id = buyer.user_id
			and
			upm.shop_id = s.shop_id
			and
			upm.product_id
			= p.product_id
			and
			upm.operator_id = operator.user_id
			<!-- 按顾客信息精确查询 -->
			<if
				test="userProductCondition.user!=null
				 and userProductCondition.user.userId!=null">
				and upm.user_id = #{userProductCondition.user.userId}
			</if>
			<!-- 按店铺信息精确查询 -->
			<if
				test="userProductCondition.shop!=null
				 and userProductCondition.shop.shopId!=null">
				and upm.shop_id = #{userProductCondition.shop.shopId}
			</if>
			<!-- 按顾客名字模糊查询 -->
			<if
				test="userProductCondition.user!=null
				 and userProductCondition.user.name!=null">
				and buyer.name like
				'%${userProductCondition.user.name}%'
			</if>
			<!-- 按商品名字模糊查询 -->
			<if
				test="userProductCondition.product!=null 
				and userProductCondition.product.productName!=null">
				and p.product_name like
				'%${userProductCondition.product.productName}%'
			</if>
			<!-- 按消费日期范围查询 -->
			<if test="userProductCondition.createTime!=null">
				and upm.create_time > #{userProductCondition.createTime}
			</if>
		</where>
		ORDER BY upm.create_time desc
		LIMIT #{rowIndex},#{pageSize};
    </select>
    
    <select id="selectUserProductMapCountByCondition" resultType="int">
           SELECT
	       count(1)
	       FROM
		   tb_user_product_map upm,
		   tb_person_info buyer,
		   tb_shop s,
		   tb_product p,
		   tb_person_info operator
		   <where>
			upm.user_id = buyer.user_id
			and
			upm.shop_id = s.shop_id
			and
			upm.product_id
			= p.product_id
			and
			upm.operator_id = operator.user_id
			<!-- 按顾客信息精确查询 -->
			<if
				test="userProductCondition.user!=null
				 and userProductCondition.user.userId!=null">
				and upm.user_id = #{userProductCondition.user.userId}
			</if>
			<!-- 按店铺信息精确查询 -->
			<if
				test="userProductCondition.shop!=null
				 and userProductCondition.shop.shopId!=null">
				and upm.shop_id = #{userProductCondition.shop.shopId}
			</if>
			<!-- 按顾客名字模糊查询 -->
			<if
				test="userProductCondition.user!=null
				 and userProductCondition.user.name!=null">
				and buyer.name like
				'%${userProductCondition.user.name}%'
			</if>
			<!-- 按商品名字模糊查询 -->
			<if
				test="userProductCondition.product!=null 
				and userProductCondition.product.productName!=null">
				and p.product_name like
				'%${userProductCondition.product.productName}%'
			</if>
			<!-- 按消费日期范围查询 -->
			<if test="userProductCondition.createTime!=null">
				and upm.create_time > #{userProductCondition.createTime}
			</if>
		</where>
    </select>
    
    <insert id="insertUserProductMap" parameterType="com.imooc.o2o.entity.UserProductMap" 
               keyColumn="user_product_id" keyProperty="userProductId" useGeneratedKeys="true">
        INSERT
		INTO
		tb_user_product_map(user_id,product_id,shop_id,operator_id,
		create_time,point)
		VALUES
		(#{user.userId},#{product.productId},#{shop.shopId},#{operator.userId},
		#{createTime},#{point})
    </insert>
</mapper>